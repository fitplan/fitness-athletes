doctype html
html
  head
    title= "#{t :'community.name'} - #{yield(:title).present? ? yield(:title) : t(:'community.tagline')}"
    = typekit 'ack7hno'
    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true
    = csrf_meta_tags
  body
    header= render 'shared/navigation'
    article.whiteout.hidden
    article.secondary-content
      .loading Loading...
    article.primary-content
      div.primary-banner
        h1="Who's your favorite athlete?"
      = render 'shared/flash_notifications'
      section= yield
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = yield :bottom
